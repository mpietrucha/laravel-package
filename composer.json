{
    "name": "mpietrucha/laravel-package",
    "description": "Laravel package tools.",
    "license": "MIT",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Micha≈Ç Pietrucha",
            "email": "michal.pietrucha@off-site.pl"
        }
    ],
    "require": {
        "php": "^8.5",
        "mpietrucha/utility": "^1.0",
        "spatie/laravel-package-tools": "^1.92"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "dev-main",
        "larastan/larastan": "^3.8",
        "laravel/framework": "^12.37",
        "mpietrucha/pint": "^1.0",
        "orchestra/testbench": "^10.6",
        "phpstan/phpstan": "2.1.31",
        "symfony/var-dumper": "^7.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mpietrucha\\Laravel\\Package\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mpietrucha\\Analyze\\": "analyze/src"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mpietrucha\\Laravel\\Package\\Providers\\MixinServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@composer normalize"
        ],
        "post-create-project-cmd": [
            "@prettier:config"
        ],
        "lint": "pint --verbose --parallel",
        "prettier:config": "curl -sSLO https://raw.githubusercontent.com/mpietrucha/prettier/refs/heads/main/dist/.prettierrc",
        "test": [
            "@test:lint",
            "@test:types"
        ],
        "test:lint": "@lint --test",
        "test:types": "phpstan analyse --ansi"
    },
    "$schema": "https://getcomposer.org/schema.json"
}
